<div class="wrap">
  <div class="header">
    <div class="container">
      <div class="head-inner clearfix">
        <div class="logo">
          <a href="#"><%= image_tag "logo.png", class: "png_ie6", alt: "胜观传播" %></a>
        </div>
        <div class="nav-box">
          <ul class="nav">
            <li><a href="#about"><p>关于我们</p><span>ABOUT</span></a></li>
