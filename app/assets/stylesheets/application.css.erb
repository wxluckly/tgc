 @charset "UTF-8";

.container{ width: 1324px; margin: 0 auto;}
.header{  position: fixed;_position:absolute; top: 0;_top: expression(eval(document.documentElement.scrollTop)); left: 0; z-index: 100;_z-index: 0;zoom:1; background: url('<%= image_url "head-bg.png" %>') left top repeat-x; _background:white; width: 100%; border-bottom: 1px solid #f2f2f2;} 
.head-inner{ padding: 20px 0 18px;}
.logo{ width: 273px; float: left;}
.logo a{ display: block; width: 100%; float: left;}
.logo img{ max-width: 100%;width: 100%;height: auto; float: left;}
.nav-box{ float: right; width: 1051px;}
.nav{ float: right; margin-top: 18px;_position: relative; _z-index: 2;}
.nav li{ display: inline-block; *float:left; *display:inline;*width:135px; margin-left: 90px;*margin-left: 0; text-align: center; line-height: 0;}
.nav li a { display: inline-block;  *float:right;  font-size: 22px; line-height: 28px;}
.nav li a span{ display: inline-block; width: 100%; *display:inline; font-size: 13px;}
.banner img{ max-width: 100%;width: 100%;height: auto; margin: 0 auto; display: block;}

.about-us{ margin-top: 50px; padding-bottom: 50px; border-bottom: 1px solid #7d7d7d;}
.about-left{ float: left; width: 386px;}
.about-left2{ display: none;}
.about-right{ float: right; width: 904px;}

.project h2,
.footer,
.brand h2{ margin-top: 40px;}
.footer{ margin-bottom: 120px;}
.footer-left{ width: 750px; float: left;}
.footer-right{ width: 430px; float: right;}
.footer h2{ margin-bottom: 40px;}

.form-box .form-group{ padding: 0 10px; background: #fcdfa2; margin-bottom: 12px;}
.form-box .form-group label{width: 60px;}
.form-box .form-group input,
.form-box .form-group textarea{  background: #fcdfa2; border: none; color: #767573; width: 676px;  height: 28px; line-height: 28px; padding: 4px; margin-left: 6px; font-size: 14px;}
.form-box .form-group textarea{ height: 200px;}
.form-box .form-group .label-textarea{ vertical-align: top; line-height: 32px;}
.form-box .form-send { padding: 0; background: white; text-align: right;}
.form-box .form-send input{font-family: "Microsoft Yahei";  padding: 0; width: 118px; height: 36px; line-height: 36px; color: white; background: #aeaeae; font-size: 20px;}
.footer-right p{ margin-bottom: 20px; font-size: 18px; line-height: 28px;}
.footer-right .footer-title{margin-bottom: 40px;}
.footer-right p i{ font-style: normal; color: white;}
.footer-right p em{ font-style: normal; font-size: 22px;}


@media screen and (max-width: 1344px) {
	.container{ width: 98%;}
	.logo{ width: 20.3%; }
	.nav-box{ width: 79.6%;}
	.nav{ margin-top: 10px;}
	.nav li {  margin-left: 30px;*margin-left: 0;*width:120px;}
	.nav li a { font-size:18px; line-height: 24px;}
	.about-left{ width: 28.7%;}
	.about-right{ float: right; width: 68.7%;}
	.footer-left{ width: 55.8%;}
	.footer-right{ width: 31.9%;}
	.form-box .form-group label{width: 8.2%;}
	.form-box .form-group input,
	.form-box .form-group textarea{ width:88%;}
	.form-box .form-send input{ width: 118px;}
}
@media screen and (max-width: 980px) {
	.nav li { *width:110px;}
}